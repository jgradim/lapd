<!DOCTYPE html>
<html>
  <head>
    <title>xml2json</title>
    <meta charset="utf-8" />
    <%= stylesheet_link_merged :base %>
    <%= javascript_link_tag 'jquery-1.4.2.min.js' %>
    <%= javascript_link_tag 'json2.min.js' %>
    <%= javascript_link_tag 'jquery.textarea.js' %>
    <%= javascript_link_tag 'modernizr-1.1.min.js' %>
    <%= javascript_link_tag 'jquery.placeholder.min.js' %>
    <%= javascript_link_tag 'progressive_enhancement.js' %>
    <%= javascript_link_tag 'application.js' %>
    <%= yield :extra_head %>
  </head>
  <body>
    <div id="wrapper">
      <header>xml2json</header>
      <nav>
        <ul>
          <li class="<%= selected('index') %>"><%= link_to "Home", root_path %></li>
          <li class="<%= selected('editor') %>"><%= link_to "Live Editor", editor_path %></li>
          <li class="<%= selected('convert') %>"><%= link_to "API Converter", convert_path %></li>
        </ul>
      </nav>
      <% flash.each do |name, msg| -%>
        <div id="flash-<%= name %>" class="flash"><%= msg %></div>
      <% end -%>
      <%= yield %>
      <footer>
        <% if current_user %>
          <%= link_to 'Edit APIs', apis_path  %> | <%= link_to 'Logout', logout_path %>
        <% else %>
          <%= link_to 'Admin', login_path %>
        <% end %>
      </footer>
    </div>
  </body>
</html>

